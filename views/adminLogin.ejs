<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      header {
        display: flex;
        align-items: center;
        padding: 10px 30px;
        background-color: #f1f1f1;
      }
      header img {
        max-width: 100%;
        height: auto;
        width: 300px;
      }
      @media screen and (max-width: 768px) {
        header {
          justify-content: center;
          padding: 10px 20px;
        }
        header img {
          width: 200px;
        }
      }
      @media screen and (max-width: 480px) {
        header img {
          width: 160px;
        }
      }
      body {
        background-color: #fffdf5;
        font-family: 'Montserrat', sans-serif;
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
      }
      .container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        max-height: 100vh;
        padding: 1rem;
      }
      .form-card {
        background-color: white;
        border-radius: 20px;
        max-width: 380px;
        width: 100%;
        padding: 2.5rem 2rem;
        box-sizing: border-box;
        box-shadow: 0 8px 20px rgb(0 0 0 / 0.1);
      }
      .title {
        color: #800000;
        font-size: 1.8rem;
        font-weight: bold;
      }
      .subtitle {
        color: #a05252;
        font-size: 1rem;
        margin-bottom: 1.5rem;
      }
      .form-control {
        border-radius: 10px;
        font-size: 1rem;
        box-shadow: none !important;
        outline: none !important;
      }
      .form-control:focus {
        border-color: #800000;
        box-shadow: none;
      }
      .btn-login {
        background-color: #800000;
        color: white;
        border-radius: 20px;
        padding: 10px;
        font-size: 1.1rem;
        border: none;
      }
      .btn-login:hover {
        background-color: #660000;
        color: white;
      }
      .text-switch {
        color: #800000;
        font-weight: bold;
      }
      .text-switch:hover {
        text-decoration: underline;
        color: #660000;
      }
    </style>
    <script type="module">
      import {
        validateSignupForm,
        togglePasswordVisibility,
      } from '/js/validation.js';
      window.validateForm = validateSignupForm;
      window.togglePasswordVisibility = togglePasswordVisibility;
    </script>
  </head>
  <body>
    <header class="app-header d-flex align-items-center px-3 py-2 shadow-sm">
      <img
        src="https://www.tce.edu/themes/gavias_edmix/logo.svg"
        alt="TCE Logo"
      />
    </header>

    <div class="container">
      <div class="card form-card">
        <div id="alertPlaceholder">
          <% if (error) { %>
          <div
            class="alert alert-warning alert-dismissible fade show"
            role="alert"
          >
            <strong>Warning!</strong> <%= error %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %> <% if (message) { %>
          <div
            class="alert alert-success alert-dismissible fade show"
            role="alert"
          >
            <strong>Success!</strong> <%= message %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>
        </div>

        <h2 class="text-center title mb-2">Admin Login</h2>
        <p class="subtitle text-center">Restricted access. Admins only.</p>

        <form
          name="adminLoginForm"
          action="/auth/admin-login"
          method="POST"
          onsubmit="return validateForm()"
        >
          <div class="mb-3">
            <label for="email" class="form-label">Admin Email</label>
            <input
              type="email"
              name="email"
              class="form-control"
              id="email"
              placeholder="Enter admin email"
            />
          </div>

          <div class="mb-3 position-relative">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                placeholder="Enter password"
              />
              <span class="input-group-text" onclick="togglePassword()">
                <i class="bi bi-eye" id="toggleIcon"></i>
              </span>
            </div>
          </div>

          <button type="submit" class="btn btn-login w-100 mb-2">Login</button>
        </form>

        <div class="text-center mt-2">
          <a href="/auth/login" class="text-decoration-none text-switch">
            Back to User Login
          </a>
        </div>

        <div class="text-center mt-2">
          <a
            href="/auth/admin-forgot-password"
            class="text-decoration-none text-switch"
          >
            Forgot Password?
          </a>
        </div>
      </div>
    </div>

    <script>
      function togglePassword() {
        const passwordField = document.getElementById('password');
        const toggleIcon = document.getElementById('toggleIcon');

        if (passwordField.type === 'password') {
          passwordField.type = 'text';
          toggleIcon.classList.remove('bi-eye');
          toggleIcon.classList.add('bi-eye-slash');
        } else {
          passwordField.type = 'password';
          toggleIcon.classList.remove('bi-eye-slash');
          toggleIcon.classList.add('bi-eye');
        }
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
