<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sign Up</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      html,
      body {
        height: 100vh;
        margin: 0;
        background-color: #fffdf5;
        font-family: 'Montserrat', sans-serif;
      }
      header {
        display: flex;
        align-items: center;
        padding: 10px 30px;
        background-color: #f1f1f1;
      }
      header img {
        max-width: 100%;
        height: auto;
        width: 250px;
      }
      @media screen and (max-width: 768px) {
        header {
          justify-content: center;
          padding: 10px 20px;
          height: 10%;
        }
        header img {
          width: 250px;
        }
      }
      @media screen and (max-width: 480px) {
        header img {
          width: 200px;
        }
      }

      .container {
        height: calc(100vh - 88px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px;
        overflow-y: auto;
      }

      .form-card {
        background-color: white;
        border-radius: 20px;
        max-width: 380px;
        width: 100%;
        padding: 2rem 1.5rem !important;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        min-height: 400px;
        overflow-y: auto;
        box-shadow: 0 0 10px rgb(0 0 0 / 0.1);
      }

      .title {
        color: #800000;
        font-size: 1.6rem;
        font-weight: bold;
        margin-bottom: 0.3rem;
      }
      .subtitle {
        color: #a05252;
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }
      .form-control {
        border-radius: 10px;
        font-size: 1rem;
        box-shadow: none !important;
        outline: none !important;
        padding: 0.5rem 0.75rem;
      }
      .form-control:focus {
        border-color: #800000;
        box-shadow: none;
      }
      .btn-login {
        background-color: #800000;
        color: white;
        border-radius: 20px;
        padding: 8px;
        font-size: 1rem;
        border: none;
        margin-bottom: 0;
      }
      .btn-login:hover {
        background-color: #660000;
        color: white;
      }
      .text-switch {
        color: #800000;
        font-weight: bold;
        font-size: 0.9rem;
      }
      .text-switch:hover {
        text-decoration: underline;
        color: #660000;
      }
      .googleLoginBtn {
        background-color: #4285f4;
        color: white;
        border-radius: 20px;
        padding: 8px;
        font-size: 1rem;
        border: none;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        margin-top: 8px;
        margin-bottom: 0;
      }
      .googleLoginBtn:hover {
        background-color: #357ae8;
        color: white;
      }
      .google-icon {
        font-size: 1.3rem;
        margin-right: 8px;
      }
      .password-wrapper {
        position: relative;
      }
      .toggle-password {
        position: absolute;
        top: 75%;
        right: 12px;
        transform: translateY(-50%);
        cursor: pointer;
        user-select: none;
        font-size: 1.2rem;
        color: #800000;
      }
      .toggle-password:hover {
        color: #660000;
      }

      #liveToast {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1080;
        min-width: 280px;
      }
    </style>

    <script type="module">
      import {
        validateSignupForm,
        togglePasswordVisibility,
      } from '/js/validation.js';
      window.validateForm = validateSignupForm;
      window.togglePasswordVisibility = togglePasswordVisibility;
    </script>
  </head>
  <body>
    <header class="app-header d-flex align-items-center px-3 py-2 shadow-sm">
      <img
        src="https://www.tce.edu/themes/gavias_edmix/logo.svg"
        alt="TCE Logo"
      />
    </header>

    <div class="container">
      <div class="card form-card">
        <!-- Alert Placeholder -->
        <div id="alertPlaceholder">
          <% if (typeof message !== 'undefined' && message) { %>
          <div
            class="alert alert-success alert-dismissible fade show"
            role="alert"
          >
            <strong>Success!</strong> <%= message %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>
        </div>

        <h2 class="text-center title mb-2">Sign Up</h2>
        <p class="subtitle text-center">Create a new account.</p>

        <form
          name="signupForm"
          action="/auth/signup"
          method="POST"
          onsubmit="return validateForm()"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              name="name"
              class="form-control"
              id="name"
              placeholder="Enter your name"
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email ID</label>
            <input
              type="email"
              name="email"
              class="form-control"
              id="email"
              placeholder="Enter your email"
            />
          </div>
          <div class="mb-3 password-wrapper">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              name="password"
              class="form-control"
              id="password"
              placeholder="Enter password"
            />
            <i
              id="togglePassword"
              class="bi bi-eye toggle-password"
              onclick="togglePasswordVisibility()"
              title="Show/Hide Password"
            ></i>
          </div>
          <button type="submit" class="btn btn-login w-100">Sign Up</button>
        </form>

        <div class="text-center mt-3">
          <span>Already have an account?</span>
          <a href="/auth/login" class="text-decoration-none text-switch"
            >Login</a
          >
        </div>

        <button id="googleLoginBtn" type="button" class="googleLoginBtn">
          <i class="bi bi-google google-icon"></i> Continue with Google
        </button>
      </div>
    </div>

    <!-- Pass Firebase Config to JS -->
    <script>
      window.firebaseConfig = {
        apiKey: '<%= process.env.apiKey %>',
        authDomain: '<%= process.env.authDomain %>',
        projectId: '<%= process.env.projectId %>',
        storageBucket: '<%= process.env.storageBucket %>',
        messagingSenderId: '<%= process.env.messagingSenderId %>',
        appId: '<%= process.env.appID %>',
      };
    </script>

    <script type="module" src="/js/googleAuth.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
