<html>
  <head>
    <title>Preview Bonafide Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      header {
        display: flex;
        align-items: center;
        padding: 10px 30px;
        background-color: #f1f1f1;
      }
      header img {
        max-width: 100%;
        height: auto;
        width: 300px;
      }
      @media screen and (max-width: 768px) {
        header {
          justify-content: center;
          padding: 10px 20px;
        }
        header img {
          width: 200px;
        }
      }
      @media screen and (max-width: 480px) {
        header img {
          width: 160px;
        }
      }
      body {
        background-color: #fffdf5;
        font-family: 'Arial', cursive;
      }
      .form-card {
        background-color: white;
        border-radius: 20px;
        max-width: 380px;
        width: 100%;
        padding: 2rem;
        margin: 40px auto;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }
      .title {
        color: #800000;
        font-size: 1.8rem;
        text-align: center;
        margin-bottom: 10px;
      }
      .subtitle {
        color: #a05252;
        font-size: 1rem;
        text-align: center;
        margin-bottom: 20px;
      }
      .btn-confirm {
        background-color: #800000;
        color: white;
        border-radius: 20px;
        padding: 10px;
        font-size: 1.1rem;
        border: none;
        width: 100%;
      }
      .btn-confirm:hover {
        background-color: #660000;
        color: white;
      }
      .btn-edit {
        background-color: #800000;
        color: rgb(245, 243, 243);
        border-radius: 20px;
        padding: 10px;
        font-size: 1.1rem;
        width: 100%;
        margin-top: 10px;
      }
      .btn-edit:hover {
        background-color: #660000;
        color: white;
      }
    </style>
  </head>
  <body>
    <header>
      <img
        src="https://www.tce.edu/themes/gavias_edmix/logo.svg"
        alt="TCE Logo"
      />
    </header>
    <div class="form-card">
      <h2 class="title">Preview Your Details</h2>
      <p class="subtitle">Please check before confirming</p>

      <div id="previewFields">
        <p>Name: <%= formData.name %></p>
        <p>Roll No: <%= formData.rollno %></p>
        <p>Parent: <%= formData.relation %> <%= formData.parentName %></p>
        <p>Year: <%= formData.year %></p>
        <p>Course: <%= formData.course %></p>
        <p>Branch: <%= formData.branch %></p>
        <p>Certificate For: <%= formData.certificateFor %></p>
        <% if (formData.scholarshipType && formData.scholarshipType.trim() !==
        "") { %>
        <p>Scholarship Type: <%= formData.scholarshipType %></p>
        <% } %>
        <p>Date: <%= formData.date %></p>
      </div>

      <form action="/bonafide/confirm" method="POST" class="mt-3">
        <button type="submit" class="btn btn-confirm">Confirm</button>
        <a href="/bonafide" class="btn btn-edit">Edit</a>
      </form>
    </div>
  </body>
</html>
